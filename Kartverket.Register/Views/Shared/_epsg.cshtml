@model PagedList.IPagedList<RegisterItem>
@using Kartverket.Register.Models

@{
    var registerName = ViewBag.register;
}

<div class="register epsg search-results">
    @foreach (EPSG item in Model)
    {
        <div class="row result-row metadata">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12" style="height: auto; border: medium none; box-shadow: none;">
                
                <div class="col-title col-xs-12 col-sm-12 col-md-5 col-lg-5">
                    <a href="@item.GetObjectUrl()" data-loading-message="@Registers.LoadingMessage" class="show-loading-animation">
                        @item.NameTranslated()
                    </a>
                    <p>
                        @item.DescriptionTranslated()
                    </p>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-actions">

                    @if (item.epsgcode == null)
                    {
                        <p title="@EPSGs.EpsgCode: @item.epsgcode"><span>EPSG: </span> - </p>
                    }
                    else
                    {
                        <p title="@EPSGs.EpsgCode: @item.epsgcode"><span>EPSG: </span>@Html.DisplayFor(modelItem => item.epsgcode)</p>
                    }

                    @if (item.sosiReferencesystem == null)
                    {
                        <p title="@EPSGs.SosiReferencesystem: @item.sosiReferencesystem"><span>Sosi referansesystem: </span> - </p>
                    }
                    else
                    {
                        <p title="@EPSGs.SosiReferencesystem: @item.sosiReferencesystem"><span>Sosi referansesystem: </span>@Html.DisplayFor(modelItem => item.sosiReferencesystem)</p>
                    }

                    @if (item.verticalReferenceSystem == null)
                    {
                        <p title="@EPSGs.VerticalReferenceSystem: @item.verticalReferenceSystem"><span>Vertikaltreferansesystem: </span> - </p>
                    }
                    else
                    {
                        <p title="@EPSGs.VerticalReferenceSystem: @item.verticalReferenceSystem"><span>Vertikaltreferansesystem: </span>@Html.DisplayFor(modelItem => item.verticalReferenceSystem)</p>
                    }

                    @if (item.horizontalReferenceSystem == null)
                    {
                        <p title="@EPSGs.HorizontalReferenceSystem: @item.horizontalReferenceSystem"><span>Horisontaltreferansesystem: </span> - </p>
                    }
                    else
                    {
                        <p title="@EPSGs.HorizontalReferenceSystem: @item.horizontalReferenceSystem"><span>Horisontaltreferansesystem: </span>@Html.DisplayFor(modelItem => item.horizontalReferenceSystem)</p>
                    }

                    @if (item.dimensionId == null)
                    {
                        <p title="@EPSGs.Dimension: "><span>@EPSGs.Dimension: </span> - </p>
                    }
                    else
                    {
                        <p title="@EPSGs.Dimension: @item.dimension.description"><span>@EPSGs.Dimension: </span>@Html.DisplayFor(modelItem => item.dimension.description)</p>
                    }

                </div>

                <div class="col-xs-12 col-sm-12 col-md- col-lg-4 col-information">

                    @if (item.externalReference == null)
                    {
                        <p title="@EPSGs.ExternalReference @item.name"><span>@EPSGs.ExternalReference: </span> - </p>
                    }
                    else
                    {
                        <p title="@EPSGs.ExternalReference @item.name"><span>@EPSGs.ExternalReference: </span><a href="@item.externalReference">@Shared.Details<i class="custom-icon-sm custom-icon-eksternlink"></i></a></p>
                    }
                </div>

            </div>
        </div>
        <hr />
    }
</div>


