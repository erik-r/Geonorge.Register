﻿@using Kartverket.Register.Helpers
@model PagedList.IPagedList<Kartverket.Register.Models.RegisterItem>
@using PagedList;
@using PagedList.Mvc;

@using Kartverket.Register.Models

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
        <br /><br />
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
    </div>


    @Html.Partial("_visningstyper")
</div>

<div class="register organization search-results">
    @foreach (Organization item in Model)
    {

        <div class="row result-row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hidden-xs col-sm- col-md-2 col-lg-2 top-padding col-img">
                    @if (item.register.parentRegister != null)
                    {
                        <a class="" href="/subregister/@item.register.parentRegister.seoname/@item.register.parentRegister.owner.seoname/@item.register.seoname/@item.submitter.seoname/@item.seoname/">
                            <img src="@Url.Content("~/data/organizations/" +  item.logoFilename)" class="center-block img-small" alt="@item.name"></a>
                    }
                    else
                    {
                        <a class="" href="/register/@item.register.seoname/@item.submitter.seoname/@item.seoname/">
                            <img src="@Url.Content("~/data/organizations/" +  item.logoFilename)" class="center-block img-small" alt="@item.name">
                        </a>
                    }
                    
                </div>

                <div class="col-no-padding-xs col-xs-8 col-sm-8 col-md-8 col-lg-8 col-title">
                    @if (item.register.parentRegister != null)
                    {
                        <a class="" href="/subregister/@item.register.parentRegister.seoname/@item.register.parentRegister.owner.seoname/@item.register.seoname/@item.submitter.seoname/@item.seoname/">
                            <h4 class="role-button" role="button" style="font-size: 18px;">
                                @item.name
                            </h4>
                        </a>
                    }
                    else
                    {
                        <a class="" href="/register/@item.register.seoname/@item.submitter.seoname/@item.seoname/">
                            <h4 class="role-button" role="button" style="font-size: 18px;">
                                @item.name
                            </h4>
                        </a>
                    }
                    <p class="col-actions">
                        Org.nr: @Html.DisplayFor(modelItem => item.number)
                    </p>
                    <p class="col-title">
                        @Html.DisplayFor(modelItem => item.description)
                    </p>
                </div>

                <div class="col-no-padding-xs col-xs-2 col-sm-2 col-md-2 col-lg-2 col-actions">
                    @if (item.status == null)
                    {
                            <span>Status: Ikke angitt</span><br />
                    }
                    else
                    {
                            <span>Status: @Html.DisplayFor(model => item.status.description) <i class="statusIcon-@Html.DisplayFor(model => item.statusId)"></i></span><br />
                    }
                </div>

            </div>
        </div>
        <hr />
    }


</div>


<div class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
    <div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6 pull-right">
        @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 pull-left">
        Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
    </div>
</div>




