@model Kartverket.Register.Models.ViewModels.RegisterItemVeiwModel
﻿@using Kartverket.Register.Helpers


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    @if (Model.suggestions.Count() == 0)
    {
        <p>Ingen foreslåtte dokumenter av @Model.currentVersion.name</p>
    }
    else
    {
        <table class="table table-responsive">
            <tr>
                <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    Tittel
                </th>
                <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    Eier
                </th>
                <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    Utgave
                </th>
                <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    Innsendt
                </th>
                <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    Status
                </th>
            </tr>

            @foreach (Kartverket.Register.Models.Document item in Model.suggestions)
            {
                <tr>
                    <td>
                        <strong><a href="/register/versjoner/@item.register.seoname/@item.documentowner.seoname/@item.seoname/@item.versionNumber/no">@item.name</a></strong>
                    </td>
                    <td title="Eier: @item.documentowner.name">
                        @Html.DisplayFor(modelItem => item.documentowner.name)
                    </td>
                    <td title="Utgave: @item.versionName">
                        @Html.DisplayFor(modelItem => item.versionName)
                    </td>
                    <td title="Innsendt: @item.dateSubmitted">
                        @Html.DisplayFor(modelItem => item.dateSubmitted)
                    </td>
                    <td title="@Html.Raw(HtmlHelperExtensions.StatusBeskrivelse())">
                        @Html.DisplayFor(modelItem => item.status.description) <i class="statusIcon-@item.statusId"></i>
                    </td>
                </tr>
            }
        </table>
    }
</div>