@model Kartverket.Register.Models.NameSpace

<div>
    <div class="row result-row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="hidden-xs col-sm-3 col-md-3 col-lg-3 top-padding">

                    @if (Model.description == null)
                    {
                        <p title="Innhold er ikke angitt for @Model.name."><span>Tjeneste: </span>Ikke angitt</p>
                    }
                    else
                    {
                        <p title="Link til innholdet i @Model.name"><span>Innhold: </span><a href="@Model.description">@Shared.Details <i class="custom-icon-sm custom-icon-eksternlink"></i></a></p>
                    }

                    @if (Model.serviceUrl == null)
                    {
                        <p title="URL til tjeneste er ikke angitt."><span>Tjeneste: </span>Ikke angitt</p>
                    }
                    else
                    {
                        <p title="URL til tjeneste i navnerommet @Model.name"><span>Tjeneste: </span><a href="@Model.serviceUrl">@Shared.Details <i class="custom-icon-sm custom-icon-eksternlink"></i></a></p>
                    }

            </div>
        </div>
    </div>

</div>

