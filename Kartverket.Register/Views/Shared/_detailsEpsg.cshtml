@model Kartverket.Register.Models.EPSG

<div class="row result-row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="hidden-xs col-sm-3 col-md-3 col-lg-3 top-padding">
            <p><b>@Html.DisplayFor(model => model.epsgcode)</b></p>
        </div>
        <div class="hidden-xs col-sm-6 col-md-6 col-lg-6 top-padding">

            @if (Model.inspireRequirement == null)
            {
                <span>Inspirekrav: Ikke angitt</span><br />
            }
            else
            {
                <span>Inspirekrav: @Html.DisplayFor(model => model.inspireRequirement.description)</span><br />
            }
            @if (Model.nationalRequirement == null)
            {
                <span>Nasjonalt krav: Ikke angitt</span><br />
            }
            else
            {
                <span>Nasjonalt krav: @Html.DisplayFor(model => model.nationalRequirement.description)</span><br />
            }
            @if (Model.nationalSeasRequirement == null)
            {
                <span>Nasjonalt krav for havområder: Ikke angitt</span><br />
            }
            else
            {
                <span>Nasjonalt krav for havområder: @Html.DisplayFor(model => model.nationalSeasRequirement.description)</span><br />
            }

        </div>
        <div class="hidden-xs col-sm-3 col-md-3 col-lg-3 top-padding">
            <p>Ekstern referanse: <a href="@Html.DisplayFor(model => model.externalReference)">Vis</a></p>
        </div>
    </div>
</div>

