@model Kartverket.Register.Models.Organization
﻿@using Kartverket.Register.Helpers

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <h3>Generell informasjon</h3>
        <p>Organisasjonsnummer: @Model.number</p>

        <h3>Dokumenter</h3>
        <p>
            @if (!string.IsNullOrWhiteSpace(Model.agreementDocumentUrl))
            {
                <a href="@Model.agreementDocumentUrl"><span class="glyphicon glyphicon-file" title="Link til avtaledokument for @Model.name" style="font-size:15px"></span> Avtaledokument</a>
            }
            else
            {
                <span>Avtaledokument: @Registers.NotSet</span>
            }

            <span class="pull-right" title="Avtaledokumentet ble godkjent @Model.agreementYear">Godkjent år: @Html.DisplayFor(m => m.agreementYear)</span>
        </p>
        
        @if (HtmlHelperExtensions.accessRegisterItem(Model))
        {
            <p>
                @if (!string.IsNullOrWhiteSpace(Model.priceFormDocument))
                {
                    <a href="@Model.priceFormDocument"><span class="glyphicon glyphicon-file" title="Link til prisskjema/kalkulator for @Model.name" style="font-size:15px"></span> Prisskjema/Kalkulator</a>
                }
                else
                {
                    <span>Prisskjema/Kalkulator: @Registers.NotSet</span>
                }
            </p>
        }
        
        <h3>Kontaktperson</h3>
        <p>Navn: @Html.DisplayFor(m => m.contact)</p>
        <p>Epost: @Html.DisplayFor(m => m.epost)</p>
        <p>
            Norge digitalmedlem:
            @if (Model.member == true)
            {
                <span>Ja</span>
            }
            else if (Model.member == false)
            {
                <span>Nei</span>
            }
            else
            {
                <span>@Registers.NotSet</span>
            }
        </p>

        @if (Model.IsMunicipality())
        {
            <h3>Kommuneinformasjon</h3>
            <p>Kommunenummer: @Html.DisplayFor(m => m.MunicipalityCode)</p>

            <p>
                Geografisk senterpunkt:
                @if (Model.HasGeographicCenter())
                {
                    <text>@Html.DisplayFor(m => m.GeographicCenterX),@Html.DisplayFor(m => m.GeographicCenterY)</text>
                }
                else
                {
                    <text>@Registers.NotSet</text>
}
            </p>

            <p>Geografisk utstrekning:
                @if (Model.HasBoundingBox())
                {
                    <ul>
                        <li>Nord: @Html.DisplayFor(m => m.BoundingBoxNorth)</li>
                        <li>Vest: @Html.DisplayFor(m => m.BoundingBoxWest)</li>
                        <li>Sør: @Html.DisplayFor(m => m.BoundingBoxSouth)</li>
                        <li>Øst: @Html.DisplayFor(m => m.BoundingBoxEast)</li>
                    </ul>
                }
                else
                {
                    <text>@Registers.NotSet</text>
}
            </p>
        }

    </div>


    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <img src="@Url.Content("~/data/organizations/" +  Model.logoFilename)" class="img-small pull-right" alt="Liten logo" title="Liten logo @Model.name" />
            <br />
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <br/>
            <img src="@Url.Content("~/data/organizations/" +  Model.largeLogo)" class="img-large pull-right" alt="Stor logo" title="Stor logo @Model.name" />
        </div>
    </div>
</div>
