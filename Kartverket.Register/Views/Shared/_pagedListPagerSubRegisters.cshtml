@model PagedList.IPagedList<Register>
@using PagedList.Mvc;
@using Kartverket.Register.Models

Viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount treff

@Html.PagedListPager(Model, page => Request.Path + "?page=" + page
+ (!string.IsNullOrEmpty(ViewBag.SortOrder) ? "&sorting=" + ViewBag.SortOrder : "")
+ (Session["text"] != null && !string.IsNullOrEmpty(Session["text"].ToString()) ? "&text=" + Session["text"].ToString() : "")
+ (Session["filterVertikalt"] != null && !string.IsNullOrEmpty(Session["filterVertikalt"].ToString()) ? "&filterVertikalt=" + Session["filterVertikalt"].ToString() : "")
+ (Session["filterHorisontalt"] != null && !string.IsNullOrEmpty(Session["filterHorisontalt"].ToString()) ? "&filterHorisontalt=" + Session["filterHorisontalt"].ToString() : "")
+ (Session["municipality"] != null && !string.IsNullOrEmpty(Session["municipality"].ToString()) ? "&municipality=" + Session["municipality"] : "")
, new PagedListRenderOptions { MaximumPageNumbersToDisplay = 1, DisplayEllipsesWhenNotShowingAllPageNumbers = false })

