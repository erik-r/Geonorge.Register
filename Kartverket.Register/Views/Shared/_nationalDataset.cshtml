@model PagedList.IPagedList<RegisterItem>
@using Kartverket.Register.Models
@using Kartverket.Register.Helpers

@functions {
    public IHtmlString GetDokDeliveryStatusSymbol(string status, bool? restricted, string type = null)
    {

        string symbolDeficient = "custom-icon custom-icon-smile-red";
        string symbolUseable = "custom-icon custom-icon-smile-yellow";
        string symbolGood = "custom-icon custom-icon-smile-green";
        string symbolNotSet = "custom-icon";

        string statusSymbol = symbolUseable;
        string title = "";

        if (restricted.HasValue && restricted.Value == true && type != "metadata")
        {
            statusSymbol = "custom-icon custom-icon-hengelaas-closed-red";
            title = UI.DOK_Delivery_Restricted;
        }
        else if (!string.IsNullOrEmpty(status))
        {
            if (status == "notset")
            {
                statusSymbol = symbolNotSet;
                title = UI.DOK_Delivery_Status_NotSet;
            }
            else if (status == "deficient")
            {
                statusSymbol = symbolDeficient;
                title = UI.DOK_Delivery_Status_Deficient;
            }
            else if (status == "useable")
            {
                statusSymbol = symbolUseable;
                title = UI.DOK_Delivery_Status_Useable;
            }
            else if (status == "good")
            {
                statusSymbol = symbolGood;
                title = UI.DOK_Delivery_Status_Good;
            }
        }

        string label = "";


        if (type.Contains("metadata"))
            label = UI.DOK_Delivery_Metadata;
        else if (type.Contains("dokDeliveryProductSheetStatus"))
            label = UI.DOK_Delivery_ProductSheet;
        else if (type.Contains("dokDeliveryPresentationRulesStatus"))
            label = UI.DOK_Delivery_PresentationRules;
        else if (type.Contains("dokDeliveryProductSpecificationStatus"))
            label = UI.DOK_Delivery_ProductSpesification;
        else if (type.Contains("dokDeliveryWmsStatus"))
            label = UI.DOK_Delivery_Wms;
        else if (type.Contains("dokDeliveryWfsStatus"))
            label = UI.DOK_Delivery_Wfs;
        else if (type.Contains("dokDeliveryDistributionAreaStatus"))
            label = UI.DOK_Delivery_DistributionArea;
        else if (type.Contains("dokDeliveryDistributionStatus"))
            label = UI.DOK_Delivery_Distribution;
        else if (type.Contains("dokDeliveryServiceAlertStatus"))
            label = UI.DOK_Delivery_ServiceAlert;
        else if (type.Contains("dokDeliveryGeodataLawStatus"))
            label = UI.DOK_Delivery_GeodataLaw;

        if (!string.IsNullOrEmpty(label))
            title = label + ": " + title;


        string html = "";
        if (status != "notset")
            html = "<a href='#' data-toggle='tooltip' data-placement = 'bottom' title='" + title + "'><span class='" + statusSymbol + "'></span></a>";

        return new HtmlString(html);
    }

    public IHtmlString OrderByLink(string tittel, string defaultSort, string statusIcon = null)
    {

        string sortingClass = "";
        string sortTitle = "";
        string sortingParam = "";
        string sortingSelected = Request.QueryString["sorting"];

        if (sortingSelected == null)
            sortingSelected = "name";

        if (sortingSelected == defaultSort)
        {
            sortingClass = "sorted-asc";
            sortTitle = UI.DOK_Delivery_Title;
            sortingParam = defaultSort + "_desc";
        }
        else if (sortingSelected.IndexOf("_desc") > -1 && sortingSelected == defaultSort + "_desc")
        {
            sortingClass = "sorted-desc";
            sortTitle = UI.DOK_Delivery_Title;
            sortingParam = defaultSort;
        }
        else
        {
            sortingClass = "";
            sortTitle = "";
            sortingParam = defaultSort;
        }

        if (sortingParam.IndexOf("Requirement") > -1)
        {
            sortTitle = "Sortert etter logisk rekkefølge";
        }
        var text = Request.QueryString["text"];

        if (sortingParam.Contains("title"))
            sortTitle = UI.DOK_Delivery_Title;
        else if (sortingParam.Contains("datasetOwner"))
            sortTitle = UI.DOK_Delivery_Owner;
        else if (sortingParam.Contains("theme"))
            sortTitle = UI.DOK_Delivery_Theme;
        else if (sortingParam.Contains("dokDeliveryMetadataStatus"))
            sortTitle = UI.DOK_Delivery_Metadata;
        else if (sortingParam.Contains("dokDeliveryProductSheetStatus"))
            sortTitle = UI.DOK_Delivery_ProductSheet;
        else if (sortingParam.Contains("dokDeliveryPresentationRulesStatus"))
            sortTitle = UI.DOK_Delivery_PresentationRules;
        else if (sortingParam.Contains("dokDeliveryProductSpecificationStatus"))
            sortTitle = UI.DOK_Delivery_ProductSpesification;
        else if (sortingParam.Contains("dokDeliveryWmsStatus"))
            sortTitle = UI.DOK_Delivery_Wms;
        else if (sortingParam.Contains("dokDeliveryWfsStatus"))
            sortTitle = UI.DOK_Delivery_Wfs;
        else if (sortingParam.Contains("dokDeliveryDistributionAreaStatus"))
            sortTitle = UI.DOK_Delivery_DistributionArea;
        else if (sortingParam.Contains("dokDeliveryDistributionStatus"))
            sortTitle = UI.DOK_Delivery_Distribution;
        else if (sortingParam.Contains("dokDeliveryServiceAlertStatus"))
            sortTitle = UI.DOK_Delivery_ServiceAlert;
        else if (sortingParam.Contains("dokDeliveryGeodataLawStatus"))
            sortTitle = UI.DOK_Delivery_GeodataLaw;
        else if (sortingParam.Contains("dokStatus"))
            sortTitle = UI.DOK_Delivery_Status;


        var linkSort = "<a data-toggle='tooltip' data-placement = 'bottom' title='" + sortTitle + "' class='" + sortingClass + "' href='?sorting=" + sortingParam;

        if (text != null)
            linkSort = linkSort + "&text=" + text;

        if (!string.IsNullOrEmpty(statusIcon))
            tittel = "<span class='" + statusIcon + "'></span>";

        linkSort = linkSort + "'>" + tittel + "</a>";

        return new HtmlString(linkSort);
    }

}

<div id="tableView" class="register dataset search-results-table-heading">
    <div class="row result-row metadata">
        <div class="col-md-3 col-sm-2">@OrderByLink("Tittel", "name")</div>
        <div class="col-md-2">@OrderByLink("Eier", "datasetOwner")</div>
        <div class="col-md-2">@OrderByLink("Temagruppe", "theme") </div>
        <div class="col-md-4 col-sm-5 status-icons">
            @OrderByLink("", "dokDeliveryMetadataStatus", "custom-icon custom-icon-info")
            @OrderByLink("", "dokDeliveryProductSheetStatus", "custom-icon custom-icon-produktark")
            @OrderByLink("", "dokDeliveryPresentationRulesStatus", "glyphicon glyphicon-picture")
            @OrderByLink("", "dokDeliveryProductSpecificationStatus", "glyphicon glyphicon-list-alt")
            @OrderByLink("", "dokDeliveryWmsStatus", "glyphicon glyphicon-globe")
            @OrderByLink("", "dokDeliveryWfsStatus", "custom-icon custom-icon-wfs")
            @OrderByLink("", "dokDeliveryDistributionAreaStatus", "custom-icon custom-icon-dekningskart")
            @OrderByLink("", "dokDeliveryDistributionStatus", "custom-icon custom-icon-lastned")
            @OrderByLink("", "dokDeliveryServiceAlertStatus", "fa fa-rss-square")
            @OrderByLink("", "dokDeliveryGeodataLawStatus", "custom-icon custom-icon-seksjonstegn")
        </div>
        <div class="col-md-1 text-center">@OrderByLink("STATUS", "dokStatus")</div>
    </div>
    <div class="menu-separator search-results-table-heading"></div>
    @foreach (Dataset item in Model)
    {
        <div class="row result-row metadata">
            <div class="col-md-3 col-sm-2"><a href="@item.GetObjectUrl()"> @item.name </a></div>
            <div class="col-md-2"><a href="/register/@item.register.seoname/@item.datasetowner.seoname" title="Datasett eier: @item.datasetowner.name">@Html.DisplayFor(modelItem => item.datasetowner.name)</a></div>
            <div class="col-md-2">
                @if (item.ThemeGroupId != null)
                {
                    <span> @item.theme.description </span>
                }
                else
                {
                    <span>Ikke angitt</span>
                }
            </div>

            <div class="col-md-4 col-sm-5 status-icons">
                @GetDokDeliveryStatusSymbol(item.dokDeliveryMetadataStatusId, item.restricted, "metadata")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryProductSheetStatusId, item.restricted, "dokDeliveryProductSheetStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryPresentationRulesStatusId, item.restricted, "dokDeliveryPresentationRulesStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryProductSpecificationStatusId, item.restricted, "dokDeliveryProductSpecificationStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryWmsStatusId, item.restricted, "dokDeliveryWmsStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryWfsStatusId, item.restricted, "dokDeliveryWfsStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryDistributionAreaStatusId, item.restricted, "dokDeliveryDistributionAreaStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryDistributionStatusId, item.restricted, "dokDeliveryDistributionStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryServiceAlertStatusId, item.restricted, "dokDeliveryServiceAlertStatus")
                @GetDokDeliveryStatusSymbol(item.dokDeliveryGeodataLawStatusId, item.restricted, "dokDeliveryGeodataLawStatus")
            </div>
            <div class="col-md-1 text-center">
                @if (item.dokStatus != null)
                {
                    <a href="#" class="status-icon-link" data-toggle='tooltip' data-placement='bottom' title='@item.dokStatus.description'>
                        <i class="statusIcon-@item.dokStatusId"></i>
                    </a>
                }
            </div>
        </div>
    }
</div>
<div id="listView">
    @foreach (Dataset item in Model)
    {
        <div class="row result-row metadata">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12" style="height: auto; border: medium none; box-shadow: none;">
                <div class="col-img col-xs-12 col-sm-12 col-md-2 col-lg-2">
                    <a href="@item.GetObjectUrl()">
                        <img src="@item.datasetthumbnail" class="img-responsive pull-left" alt="Thumbnail for @item.name" />
                    </a>
                </div>
                <div class="col-title col-xs-12 col-sm-12 col-md-5 col-lg-5">
                    <a href="@item.GetObjectUrl()">
                        @item.name
                    </a>

                    <a href="/register/@item.register.seoname/@item.datasetowner.seoname/" title="Datasett eier: @item.datasetowner.name">
                        <img src="@Url.Content("~/data/organizations/" + item.datasetowner.logoFilename)" class="img-responsive img-small-logo hidden-print" alt="@Html.DisplayFor(modelItem => item.datasetowner.name)" />
                    </a>
                    <div class="orglogo">
                        <a href="/register/@item.register.seoname/@item.datasetowner.seoname" title="Datasett eier: @item.datasetowner.name">
                            @Html.DisplayFor(modelItem => item.datasetowner.name)
                        </a>
                    </div>

                    <a class="beskrivelse-print visible-print" href="/register/@item.register.seoname/@item.datasetowner.seoname" title="Datasett eier: @item.datasetowner.name">
                        <p>Eier: @Html.DisplayFor(modelItem => item.datasetowner.name)</p>
                    </a>

                    <br class="hidden-print" />
                    <div class="hidden-print">
                        @if (item.description != null)
                {
                            <p>
                                @if (item.description.Length < 80)
                                {
                                    @item.description.Substring(0, item.description.Length)
                                    <a class="hidden-print" href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(item.datasetowner.name)/@Html.ToUrl(item.name)" title="Vis mer info om @item.name">vis mer info</a>
                                }
                                else
                                {
                                    @item.description.Substring(0, 80)<text>...</text>
                                    <a class="hidden-print" href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(item.datasetowner.name)/@Html.ToUrl(item.name)" title="Vis mer info om @item.name">vis mer info</a>
                                }
                            </p>
                        }
                    </div>
                    <p class="visible-print">@item.description</p>
                </div>
                <div class="col-information col-xs-8 col-sm-5 col-md-5 col-lg-5">
                    <ul style="list-style-type:none;">
                        @if (item.dokStatus != null)
                        {
                            <li title="@Html.Raw(HtmlHelperExtensions.DokStatusBeskrivelse())"><span>DOK-status: </span>@item.dokStatus.description <i class="statusIcon-@item.dokStatusId"></i></li>
                        }
                        @if (item.dokStatusDateAccepted != null)
                        {
                            <li><span>DOK-godkjenningsdato: </span>@item.dokStatusDateAccepted </li>
                        }
                        @if (item.dateSubmitted != null)
                        {
                            <li><span>Innsendt: </span>@item.dateSubmitted </li>
                        }
                        @if (item.modified != null)
                        {
                            <li><span>Siste endret: </span>@item.modified </li>
                        }


                        @if (item.ThemeGroupId != null)
                        {
                            <li title="Temagruppe: @item.theme.description">
                                <span>Gruppe: </span>@item.theme.description
                            </li>
                        }
                        else
                        {
                            <li title="Temagruppe: Ikke angitt"><span>Gruppe: </span>Ikke angitt</li>
                        }
                    </ul>

                </div>

            </div>

        </div>
        <hr />
    }
</div>
