@model Kartverket.Register.Models.CodelistValue

@{
    ViewBag.Title = "Delete";
}

@section breadcrumb {
    @if (Model.register.parentRegisterId != null)
    {
        <li><a href="/register/@Model.register.parentRegister.seoname">@Html.DisplayFor(model => model.register.parentRegister.name)</a></li>
        <li><a href="/subregister/@Model.register.parentRegister.seoname/@Model.register.owner.seoname/@Model.register.seoname">@Html.DisplayFor(model => model.register.name)</a></li>
        <li><a href="/subregister/@Model.register.parentRegister.seoname/@Model.register.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname">@Html.DisplayFor(model => model.name)</a></li>
        <li class="active">Slett</li>
    }
    else
    {
        <li><a href="/register/@Model.register.seoname">@Html.DisplayFor(model => model.register.name)</a></li>
        <li><a href="/register/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname">@Html.DisplayFor(model => model.name)</a></li>
        <li class="active">Slett</li>
    }
}

<h2>Slett</h2>

<h3>Er du sikker på at du vil slette @Model.name</h3>
<div>
    <hr />

    @using (Html.BeginForm()) {

        <div class="form-actions no-color">
            <input type="submit" value="Slett" class="btn btn-default" /> |
            
            
            @if (Model.register.parentRegisterId != null)
            {
                <a href="/subregister/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname">Tilbake</a>
            }
            else
            {
                <a href="/register/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname">Tilbake</a>
            }
            
            
        </div>
    }
</div>
