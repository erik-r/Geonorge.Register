﻿@using Kartverket.Register.Helpers
@model PagedList.IPagedList<Kartverket.Register.Models.RegisterItem>
@using PagedList;
@using PagedList.Mvc;

@using Kartverket.Register.Models

<div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
    Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
</div>
<div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
    @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
</div>

<hr />

<div class="search-results">
    @foreach (Organization item in Model)
    {

        <div class="row result-row metadata">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12" style="height: auto; border: medium none; box-shadow: none;">
                <div class="col-img col-xs-6 col-sm-2 col-md-2 col-lg-2 pull-left">
                    <a href="/register/@item.register.seoname/@item.submitter.seoname/@item.seoname"><img src="@Url.Content("~/data/organizations/" +  item.logoFilename)" class="img-responsive center-block pull-left" alt="logo @item.name" /></a>
                </div>

                <div class="col-no-padding-xs col-xs-9 col-sm-9 col-md-9 col-lg-9col-title">
                    <a class="" href="/register/@item.register.seoname/@item.submitter.seoname/@item.seoname">
                        <h4 class="role-button" role="button">
                            @Html.DisplayFor(modelItem => item.name)
                        </h4>
                    </a>                    
                    <p class="">
                        Org.nr: @Html.DisplayFor(modelItem => item.number)
                    </p>
                    <p class="">
                        @Html.DisplayFor(modelItem => item.description)
                    </p>
                </div>
            </div>
        </div>
    }


</div>

<hr />
<div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
    Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
</div>
<div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
    @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
</div>




