@model Kartverket.Register.Models.Document
﻿@using Kartverket.Register.Helpers

@{
    ViewBag.Title = @Model.name;
}

@section breadcrumb {
    <li class="active">@Html.DisplayFor(model => model.name)</li>
}
<div class="page-header">
    <h2 class="h-md">@Html.DisplayFor(model => model.name)</h2>
    <hr>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-no-padding-xs col-xs-12 col-sm-9 col-md-9 col-lg-9">
        ID: <a href="@Request.Url.AbsoluteUri">@Request.Url.AbsoluteUri</a>

        <p>
            @Html.DisplayFor(model => model.description)
        </p>
        @if (Model.status == null)
        {
            <span>Status: Ikke angitt</span><br />
        }
        else
        {
            <span>Status: @Html.DisplayFor(model => model.status.description) <i class="statusIcon-@Html.DisplayFor(model => model.statusId)"></i></span><br />
        }
        @if (Model.documentowner == null)
        {
            <span>Administrator: Ikke angitt</span><br />
        }
        else
        {
            <span>Administrator: @Html.DisplayFor(model => model.documentowner.name)</span><br />
        }
        @if (Model.documentowner == null)
        {
            <span>Eier: Ikke angitt</span><br />
        }
        else
        {
            <span>Eier: @Html.DisplayFor(model => model.documentowner.name)</span><br />
        }
        @if (Model.currentVersion == null)
        {
            <span>Versjon: Ikke angitt</span><br />
        }
        else
        {
            <span>Versjon: @Html.DisplayFor(model => model.currentVersion.versionInfo)</span><br />
        }
        @if (Model.documentUrl.Contains("/data/documents/"))
        {
            <span>Referanse: Intern</span><br />
        }
        else
        {
            <span>Referanse: Ekstern</span><br />
        }

    </div>
    <div class="col-no-padding-xs col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <span class="small">Registrert: @Html.DisplayFor(model => model.dateSubmitted)</span><br />
        <span class="small">Oppdatert: @Html.DisplayFor(model => model.modified)</span>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <hr>

        <div class="row result-row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hidden-xs col-sm-3 col-md-3 col-lg-3 top-padding">
                    @{
                        string thumb = "/Content/pdf.jpg";
                        if (Model.thumbnail != null)
                        {
                            thumb = Model.thumbnail;
                        }
                    }
                    <a href="@Html.DisplayFor(model => model.documentUrl)"><img src="@thumb" class="img-responsive center-block img-thumbnail" alt="forside pdf" /></a>
                </div>
                <div class="col-no-padding-xs col-xs-12 col-sm- col-md-9 col-lg-9">
                    <a href="@Html.DisplayFor(model => model.documentUrl)" type="button" class="btn btn-lg btn-link">
                        <span class="glyphicon glyphicon-download-alt pull-left"> </span>last ned
                    </a>
                </div>
            </div>
        </div>

        <hr />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>
                <a href="/register/@Html.ToUrl(Model.register.name)/">Tilbake</a>
                @if (Session["role"] == "editor")
                {
                    <span> | </span><a href="/dokument/@Html.ToUrl(Model.register.name)/@Html.ToUrl(Model.documentowner.name)/@Html.ToUrl(Model.name)/rediger/">Endre</a>
                    <span> | </span><a href="/dokument/@Html.ToUrl(Model.register.name)/@Html.ToUrl(Model.documentowner.name)/@Html.ToUrl(Model.name)/slett">Slett</a>
                }
            </p>
        </div>
    </div>
</div>

