@model List<Kartverket.Register.Models.RegisterItem>

@using Kartverket.Register.Models

<table class="table table-striped table-bordered" style="background-color: white">
    <thead>
        <tr>
            <th><a href="" data-sort="name" data-order="asc">Tittel</a></th>
            <th><a href="" data-sort="publisher" data-order="asc">Eier / leverandør</a></th>
            <th><a href="" data-sort="themegroup" data-order="asc">Temagruppe</a></th>
            <th>Beskrivelse</th>
            <th style="width: 80px">Metadata</th>
            <th style="width: 90px">Produktark</th>
            <th style="width: 90px">Kartografi</th>
            <th style="width: 110px">Produkt-spesifikasjon</th>
            <th>SOSI</th>
            <th>WMS</th>
            <th><a href="" data-sort="status" data-order="asc">Status</a></th>
        </tr>
    </thead>
    <tbody class="list">
        @foreach (Dataset item in Model)
        {
            <tr>
                <td><b class="name">@item.name</b></td>
                <td class="publisher">@item.datasetowner.name</td>
                <td class="themegroup">@item.theme.description</td>
                <td>
                    @if (item.description != null)
                    {
                        <p id="shortdesc">
                            @if (item.description.Length < 80)
                            {
                                @item.description.Substring(0, item.description.Length)
                            }
                            else
                            {
                                @item.description.Substring(0, 80)<text>...</text>
                            }
                            @*<a href="@Url.Action("Display", "DisplayDataset", new { id = @item.Id, name=@item.ToSeoUrl()})">vis mer info</a>*@
                        </p>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.metadata))
                    {
                        <a href="@item.metadata" class="btn btn-sm btn-fresh-green" title="Vis metadata for @item.name"><span class="glyphicon glyphicon-globe"></span> Vis</a>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.productsheet))
                    {
                        <a href="@item.productsheet" class="btn btn-sm btn-fresh-blue" title="Last ned produktark for @item.name"><span class="glyphicon glyphicon-info-sign"></span> Hent</a>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.presentationRules))
                    {
                        <a href="@item.presentationRules" class="btn btn-sm btn-fresh-green" title="Last ned kartografi for @item.name"><span class="glyphicon glyphicon-picture"></span> Hent</a>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.productspesification))
                    {
                        <a href="@item.productspesification" class="btn btn-sm btn-fresh-blue" title="Last ned produktspesifikasjon for @item.name"><span class="glyphicon glyphicon-list-alt"></span> Hent</a>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.distributionFormat) && item.distributionFormat.Trim().ToLower().Equals("sosi"))
                    {
                        <text>ja</text>
                    }
                    else
                    {
                        <text>nei</text>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.wmsUrl))
                    {
                        <a href="@item.wmsUrl">WMS</a>
                    }
                </td>
                <td class="status">
                    @if (item.status != null)
                    {
                        @item.status.description
                    }
                </td>

            </tr>
        }
    </tbody>
</table>




