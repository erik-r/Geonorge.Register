﻿@using Kartverket.Register.Helpers
@model PagedList<Kartverket.Register.Models.Dataset>
@using Kartverket.Register.Models
@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = Model.ElementAt(0).register.name;

}

@section breadcrumb {
    
}

<script>
    function SortBy(sort) {
        var sort = document.getElementById("sorting");
        var selected = sort.options[sort.selectedIndex].text;
        document.sortering.submit();
        localStorage['SortingType'] = selected;
    }
</script>


<div class="page-header">
    <h2 class="h-md">@Html.DisplayFor(model => Model.ElementAt(0).register.name)</h2>
    <hr>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-no-padding-xs col-xs-12 col-sm-9 col-md-9 col-lg-9">
        ID <br/>
        Beskrivelse        
    </div>

    <div class="col-no-padding-xs col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <span class="small">Registrert: @Html.DisplayFor(model => model.ElementAt(0).register.dateSubmitted)</span><br />
        <span class="small">Oppdatert: @Html.DisplayFor(model => model.ElementAt(0).register.modified)</span>

    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="page-header">
            <hr>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
                <br /><br />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="">
                    <ul class="nav nav-pills text-center">
                        <li><a onclick="listView()" id="button-listView" name="liste" class="active"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Liste</a></li>
                        <li><a onclick="galleryView()" id="button-galleryView" name="galleri" class=""><span class="glyphicon glyphicon-th" aria-hidden="true"></span> Galleri</a></li>
                        <li><a onclick="tableView()" id="button-tableView" name="tabell" class=""><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Tabell</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="pagination pagination-sm pull-right">
                    <form action="/register/@Model.ElementAt(0).register.seoname/dataset/" name="sortering" method="get">
                        <div class="pull-right" onchange="SortBy()">
                            Sorter: @Html.DropDownList("sorting", "Navn a-å")
                        </div>
                    </form>
                </div>
            </div>


            <br />

            <br /><br />

            <hr />
        </div>

        <div class="document search-results"> @*lage egne stiler for dataset*@
            @foreach (Dataset item in Model)  
            {
                <div class="row result-row metadata">
                    <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12" style="height: auto; border: medium none; box-shadow: none;">
                        <div class="col-img col-xs-6 col-sm-2 col-md-2 col-lg-2 ">
                            
                            <a href="#">
                                <img src="@item.datasetthumbnail" class="img-responsive pull-left" alt="datasetThumb" />
                            </a>
                            
                        </div>
                        <div class="col-no-padding-xs col-title col-sm-5 col-md-5 col-lg-5">
                            <a class="" href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(item.submitter.name)/@Html.ToUrl(item.name)/">
                                <h4 class="role-button" role="button" style="font-size: 18px;">
                                    @item.name
                                </h4>
                            </a>
                            <a class="" href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(@item.datasetowner.name)/">
                                <img src="@Url.Content("~/data/organizations/" +  item.datasetowner.logoFilename)" class="img-responsive" alt="@Html.DisplayFor(modelItem => item.datasetowner.name)" />
                            </a>  
                            <br />                                                      
                            <div class=" ">
                                @if (item.description != null)
                                {
                                <p id="shortdesc">
                                    @if (item.description.Length < 80)
                                    {
                                        @item.description.Substring(0, item.description.Length)
                                        <a href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(item.datasetowner.name)/@Html.ToUrl(item.name)/">vis mer info</a>
                                    }
                                    else
                                    {
                                        @item.description.Substring(0, 80)<text>...</text>
                                        <a href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(item.datasetowner.name)/@Html.ToUrl(item.name)/">vis mer info</a>
                                    }
                                </p>
                                }
                            </div>
                        </div>
                        <div class="col-no-padding-xs col-actions col-xs-6 col-sm-2 col-md-2 col-lg-2">
                            <ul style="list-style-type:none">
                                @if (!string.IsNullOrWhiteSpace(item.MetadataUrl))
                                {
                                    <li>
                                        <a href="@item.MetadataUrl" class="btn btn-sm btn-fresh-green" title="Vis metadata for @item.name"><span class="glyphicon glyphicon-globe"></span>Metadata</a>
                                    </li>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.ProductSheetUrl))
                                {
                                    <li>
                                        <a href="@item.ProductSheetUrl" class="btn btn-sm btn-fresh-blue" title="Last ned produktark for @item.name"><span class="glyphicon glyphicon-info-sign"></span>Produktark</a>
                                    </li>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.PresentationRulesUrl))
                                {
                                    <li>
                                        <a href="@item.PresentationRulesUrl" class="btn btn-sm btn-fresh-green" title="Last ned kartografi for @item.name"><span class="glyphicon glyphicon-picture"></span>Kartografi</a>
                                    </li>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.ProductSpecificationUrl))
                                {
                                    <li>
                                        <a href="@item.ProductSpecificationUrl" class="btn btn-sm btn-fresh-blue" title="Last ned produktspesifikasjon for @item.name"><span class="glyphicon glyphicon-list-alt"></span>Produktspesifikasjon</a>
                                    </li>
                                }

                            </ul>
                        </div>
                        <div class="col-no-padding-xs col-xs-6 col-sm-3 col-md-3 col-lg-3 pull-right">
                            <ul style="list-style-type:none">
                                @if (!string.IsNullOrWhiteSpace(item.DistributionFormat) && item.DistributionFormat.Trim().ToLower().Equals("sosi"))
                                {
                                    <li>
                                        SOSI: ja
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        SOSI: Nei
                                    </li>
                                }

                                @if (!string.IsNullOrWhiteSpace(item.WmsUrl))
                                {
                                    <li>
                                        <a href="@item.WmsUrl">WMS</a>
                                    </li>
                                }
                                @if (item.status != null)
                                {
                                    <li>
                                        Status: @item.status.description
                                    </li>
                                }                                
                                @if (item.ThemeGroupId != null)
                                {
                                    <li>
                                        Gruppe: @item.theme.description
                                    </li> 
                                }
                                else
                                {
                                    <li>Gruppe: Ikke angitt</li>
                                }                              
                            </ul>

</div>

                    </div>

                </div>
                <hr />
            }
        </div>
    </div>
</div>


<hr />
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

    <div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
        Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
    </div>
    <div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
        @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
    </div>
    <p>
        <a href="/register/@Html.ToUrl(Model.ElementAt(0).register.name)/">Tilbake</a>
    </p>
</div>





