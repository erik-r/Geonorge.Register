@model HashSet<Kartverket.Register.Models.RegisterItem>

@using Kartverket.Register.Models


<div>
@foreach (Document item in Model)
{

    <div class="row result-row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="hidden-xs col-sm-1 col-md-1 col-lg-1 top-padding">
                <a href="@Html.DisplayFor(modelItem => item.document)"><img src="" class="img-responsive center-block" alt="forside pdf" /></a>
            </div>
            <div class="col-no-padding-xs col-xs-12 col-sm-5 col-md-5 col-lg-5">
                <h4 class="role-button" role="button">
                    <a href="dokument/@item.name/@item.systemId">@item.name</a>                    
                    @Html.DisplayFor(modelItem => item.name)
                </h4>
                <h5>
                    @Html.DisplayFor(modelItem => item.documentowner)
                </h5>
                <p>
                    @Html.DisplayFor(modelItem => item.description)
                </p>
            </div>
            <div class="col-no-padding-xs col-xs-6 col-sm-3 col-md-3 col-lg-3 ">
                <a href="@Html.DisplayFor(modelItem => item.document)" type="button" class="btn btn-xs btn-bunnmarg btn-link">
                    <span class="glyphicon glyphicon-download-alt pull-left"> </span>last ned
                </a><br>

            </div>
        </div>
    </div>
}


</div>

<table class="table">
    <tr>
        <th>
            Navn
        </th>
        <th>
            Innhold
        </th>
        <th>
            Ansvarlig
        </th>       
        <th>
            Status
        </th>
        <th>
            Dokument
        </th>
        <th>

        </th>
    </tr>

    @foreach (Document item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.documentowner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.document)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.systemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.systemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.systemId })
            </td>
        </tr>
    }

</table>

