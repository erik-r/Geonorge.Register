@model Kartverket.Register.Models.ViewModels.RegisterItemVeiwModel
﻿@using Kartverket.Register.Helpers

@{
    ViewBag.Title = @Model.currentVersion.name;
    var documentOwner = ViewBag.registerItemOwner;
}

@section breadcrumb {
    <li><a href="/register/@Model.currentVersion.register.seoname">@Html.DisplayFor(model => model.currentVersion.register.name)</a></li>
    <li class="active">@Html.DisplayFor(model => model.currentVersion.name)</li>
}
@*<div class="page-header">
    <h2 class="h-md">@Html.DisplayFor(model => model.currentVersion.name)</h2>
    <hr>
</div>*@
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <ul class="page-header nav nav-tabs nav-tabs-topp" style="display:block; padding-bottom:0px;">
            <li> <h2 class="h-md">@Html.DisplayFor(model => model.currentVersion.name)</h2> </li>
            <li class="tab active"><a aria-expanded="false" href="#gjeldende" id="gjeldendeLink" data-toggle="tab">Gjeldende</a></li>
            <li class="tab pull-right"><a aria-expanded="false" href="#forslag" id="forslagLink" data-toggle="tab">Forslag</a></li>
            <li class="tab pull-right"><a aria-expanded="false" href="#historiske" id="historiskeLink" data-toggle="tab">Historiske</a></li>
        </ul>
            <br />
    </div>

        @if (Model.currentVersion.register.containedItemClass == "Organization")
        {
            @Html.Partial("_detailsOrganization")
        }
        @if (Model.currentVersion.register.containedItemClass == "Document")
        {
            <div class="tab-content">
                <div class="tab-pane active" id="gjeldende">
                    @Html.Partial("_currentVersionDocument", Model)
                </div>
                <div class="tab-pane" id="historiske">
                    @Html.Partial("_histroicalDocuments", Model)
                </div>
                <div class="tab-pane" id="forslag">
                    @Html.Partial("_suggestedDocuments", Model)
                </div>
            </div>
        }
        @if (Model.currentVersion.register.containedItemClass == "Dataset")
        {
            @Html.Partial("_detailsDataset")
        }
        @if (Model.currentVersion.register.containedItemClass == "EPSG")
        {
            @Html.Partial("_detailsEpsg")
        }
        @if (Model.currentVersion.register.containedItemClass == "Register")
        {
            @Html.Partial("_detailsSubregister")
        }
        @if (Model.currentVersion.register.containedItemClass == "CodelistValue")
        {
            @Html.Partial("_detailsCodelistValue")
        }
        
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <hr />
        @if (Request.IsAuthenticated)
        {

            if (HtmlHelperExtensions.accessRegisterItem(Model.currentVersion))
            {      
                if (Model.currentVersion.register.containedItemClass == "Organization")
                {
                    <a class="btn btn-default btn-space pull-right" href="/organisasjoner/@Model.currentVersion.register.seoname/@Model.currentVersion.submitter.seoname/@Model.currentVersion.seoname/rediger">Rediger</a>
                    <a class="btn btn-default btn-space pull-right" href="/organisasjoner/@Model.currentVersion.register.seoname/@Model.currentVersion.submitter.seoname/@Model.currentVersion.seoname/slett">Slett</a>
                }
                if (Model.currentVersion.register.containedItemClass == "Document")
                {
                    if (Model.currentVersion.register.parentRegisterId != null)
                    {
                        <a class="btn btn-default btn-space pull-right" href="/dokument/versjon/@Model.currentVersion.register.parentRegister.seoname/@Model.currentVersion.register.parentRegister.owner.seoname/@Model.currentVersion.register.seoname/@documentOwner/@Model.currentVersion.seoname/ny">Foreslå ny versjon av @Model.currentVersion.name</a>
                    }
                    else
                    {
                        <a class="btn btn-default btn-space pull-right" href="/dokument/versjon/@Model.currentVersion.register.seoname/@documentOwner/@Model.currentVersion.seoname/ny">Foreslå ny versjon av @Model.currentVersion.name</a>
                    }
                }                
                if (Model.currentVersion.register.containedItemClass == "Dataset")
                {
                    <a class="btn btn-default btn-space pull-right" href="/dataset/@Model.currentVersion.register.seoname/@Model.currentVersion.submitter.seoname/@Model.currentVersion.seoname/rediger/">Rediger</a>
                    <a class="btn btn-default btn-space pull-right" href="/dataset/@Model.currentVersion.register.seoname/@Model.currentVersion.submitter.seoname/@Model.currentVersion.seoname/slett">Slett</a>
                }
                if (Model.currentVersion.register.containedItemClass == "EPSG")
                {
                    <a class="btn btn-default btn-space pull-right" href="/epsg-koder/@Model.currentVersion.seoname/rediger">Rediger</a>
                    <a class="btn btn-default btn-space pull-right" href="/epsg-koder/@Model.currentVersion.seoname/slett">Slett</a>
                }
                if (Model.currentVersion.register.containedItemClass == "CodelistValue")
                {
                    <a class="btn btn-default btn-space pull-right" href="/kodeliste/@Model.currentVersion.register.seoname/@Model.currentVersion.register.owner.seoname/@Model.currentVersion.seoname/rediger">Rediger</a>
                    <a class="btn btn-default btn-space pull-right" href="/kodeliste/@Model.currentVersion.register.seoname/@Model.currentVersion.register.owner.seoname/@Model.currentVersion.seoname/slett">Slett</a>
                }


            }
        }
        <a href="/register/@Model.currentVersion.register.seoname">Tilbake</a>

</div>
