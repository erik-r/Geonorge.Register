@model Kartverket.Register.Models.ViewModels.RegisterV2ViewModel
@using Kartverket.Register.Helpers
@using PagedList
@using Kartverket.Register.Models
@{
    ViewBag.Title = @Model.Register.name;
    string municipalityCode = ViewBag.selectedMunicipalityCode;
    Organization municipality = ViewBag.organizationMunicipality;
}

@section breadcrumb {

    @foreach (var register in HtmlHelperExtensions.registers(Model.Register))
    {
        <li><a href="@register.GetObjectUrl()">@register.name</a></li>
    }
    <li>@Model.Register.name</li>
}

@{
    var page = ViewBag.page;
    var sortering = Model.Register.items.OrderBy(o => o.name).ToList();
    var sorteringRegister = Model.Register.subregisters.OrderByDescending(s => s.name).ToList();
    int pageSize = 50;
    int pageNumber = (page ?? 1);

    if (Model.Register.containedItemClassIsRegister())
    {
        sorteringRegister = HtmlHelperExtensions.SortingRegisters(Model.Register, ViewBag.SortOrder);
    }
    else
    {
        sortering = HtmlHelperExtensions.SortingRegisterItems(Model.Register, ViewBag.SortOrder);
    }
}
@section Scripts {
    <script>
        $(function () {
            var menu_state = localStorage.setItem("navtabselected", "gjeldende");
        }
    )
    </script>
}

@Html.Partial("_SearchBarPartial")
<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                @Html.DisplayFor(model => model.Register.name)
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-no-padding-xs col-xs-12 col-sm-10 col-md-10 col-lg-10">
        @if (Model.Register.description != null)
            {
            <p>
                @Html.DisplayFor(model => model.Register.description)
                @if (Model.Register.IsDokMunicipal())
                {
                    <br />
                    @Html.Raw(HtmlHelperExtensions.GetDOKMunicipalConfirmationText(municipality));
                }
            </p>
        }
        @if (Model.Register.IsServiceAlertRegister())
        {
            if (!Request.IsAuthenticated)
            {
                <span><a href="@Url.Action("SignIn", "AuthServices")"> Logg inn</a> for å legge til nye varsler.</span><br />
            }
            <a href="@RegisterUrls.urlFormat(Request, "atom")" class="">@ServiceAlerts.SubscribeServiceAlert</a><br />
        }
    </div>

    <div class="col-no-padding-xs col-xs-12 col-sm-3 col-md-2 col-lg-2 text-right">
        <span class="small">@Registers.Updated: @Html.DisplayFor(model => model.Register.modified)</span><br />
    </div>

    <div class="search-result-navigation register-navigation">
        <div class="col-md-4">
            @if (Model.Register.containedItemClassIsRegister())
            {
                @Html.Partial("_pagedListPagerSubRegisters", sorteringRegister.ToPagedList(pageNumber, pageSize))
            }
            else {
                @Html.Partial("_pagedListPager", sortering.ToPagedList(pageNumber, pageSize))
            }
        </div>
        <div class="col-md-4">
            @Html.Partial("_otherformats")
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Partial("_LayoutSelect")
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @if (Model.Register.containedItemClassIsOrganization())
            {
            @Html.Partial("_organization", sortering.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.containedItemClassIsCodelistValue())
            {
            @Html.Partial("_codelistValue", sortering.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.containedItemClassIsDocument())
            {
            @Html.Partial("_documents", sortering.ToPagedList(pageNumber, pageSize));
            }
        @if (Model.Register.containedItemClassIsDataset())
            {
            @Html.Partial("_dataset", sortering.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.containedItemClassIsEPSG())
            {
            @Html.Partial("_epsg", sortering.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.containedItemClassIsNameSpace())
            {
            @Html.Partial("_nameSpace", sortering.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.containedItemClassIsServiceAlert())
            {
            @Html.Partial("_serviceAlert", sortering.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.ContainedItemClassIsInspireDataset())
            {
            @Html.Partial("_inspireDataset", Model.RegisterItems.ToPagedList(pageNumber, pageSize))
        }
        @if (Model.Register.containedItemClassIsRegister())
            {
            @Html.Partial("_subregister", sorteringRegister.ToPagedList(pageNumber, pageSize))
        }
    </div>
    <div class="clearfix"></div>
    <div class="col-sm-12 col-md-12 col-lg-12">
        @if (Model.Register.containedItemClassIsRegister())
            {
            @Html.Partial("_pagedListPagerSubRegisters", sorteringRegister.ToPagedList(pageNumber, pageSize))
        }
        else {
            @Html.Partial("_pagedListPager", sortering.ToPagedList(pageNumber, pageSize))
        }
    </div>


    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
        @if (Request.IsAuthenticated)
            {
                if (HtmlHelperExtensions.Access(Model))
                {
                    if (Model.Register.IsDokMunicipal())
                    {
                        if (municipalityCode != null)
                        {
                            if (HtmlHelperExtensions.AccessEditDOKMunicipalBySelectedMunicipality(municipalityCode))
                            {
                            <a href="/dok/kommunalt/@municipalityCode/rediger" class="btn btn-default btn-space pull-right">@Registers.EditList</a>
                            <a class="btn btn-default btn-space pull-right" href="@Model.Register.GetObjectCreateUrl(municipalityCode)">@Shared.Add</a>
                        }
                    }
                }
                else
                {
                    <a class="btn btn-default btn-space pull-right" href="@Model.Register.GetObjectCreateUrl()">@Shared.Add</a>
                }
            }
            if (HtmlHelperExtensions.IsAdmin() && !Model.Register.IsServiceAlertRegister())
            {
                <a class="btn btn-default btn-space pull-right" href="@Model.Register.GetEditObjectUrl()">@Shared.Edit</a>
            }
        }

        @if (Model.Register.HasParentRegister())
            {
            <a class="hidden-print show-loading-animation" data-loading-message="@Registers.LoadingMessage" href="@Model.Register.parentRegister.GetObjectUrl()">@Shared.Back</a>
        }
        else {
            <a class="hidden-print show-loading-animation" data-loading-message="@Registers.LoadingMessage" href="/">@Shared.Back</a>
        }
    </div>
</div>