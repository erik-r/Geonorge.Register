        <div class="page-header">
            <hr>
        </div>


        @if (Model.containedItemClass == "Organization")
        {
            @Html.Partial("_organization", Model.items.OrderBy(i => i.name).ToList())
        }
        @if (Model.containedItemClass == "Document")
        {
            @Html.Partial("_documents", Model.items.OrderBy(i => i.name).ToList())
        }
        @if (Model.containedItemClass == "Dataset")
        {
            @Html.Partial("_dataset", Model.items.OrderBy(i => i.name).ToList())
        }
        @if (Model.containedItemClass == "EPSG")
        {
            @Html.Partial("_epsg", Model.items.OrderBy(i => i.name).ToList())
        }
        @if (Model.containedItemClass == "Register")
        {
            @Html.Partial("_subregister", Model.subregisters.OrderBy(i => i.name).ToList())
        }

