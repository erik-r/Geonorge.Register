@using Kartverket.Register.Helpers
@model IEnumerable<Kartverket.Register.Models.Register>

@{
    ViewBag.Title = "Registrene";
}
@Html.Partial("_SearchBarPartial")

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                @Shared.Register_Heading
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-responsive">
            <tr>
                <th>
                    @Shared.Register_Name
                </th>
                <th>
                    @Shared.Register_Content
                </th>
                <th>
                    @Shared.Register_Owner
                </th>
            </tr>
            <tr>
                <td>
                    <p><a href="@Html.ObjektkatalogUrl()" data-loading-message="@Shared.Register_LoadingMessage" class="show-loading-animation">@Shared.Register_Objektregisteret</a></p>
                </td>
                <td>
                    @Shared.Register_ObjektregisteretContent
                </td>
                <td>

                </td>

            </tr>
            <tr>
                <td>
                    <p><a href="/register/kartografi" data-loading-message="@Shared.Register_LoadingMessage" class="show-loading-animation">@Shared.Register_Kartografi</a></p>
                </td>
                <td>
                    @Shared.Register_KartografiContent
                </td>
                <td></td>

            </tr>
            <tr>
                <td>
                    <p><a href="/register/symbol" data-loading-message="@Shared.Register_LoadingMessage" class="show-loading-animation">Symbol</a></p>
                </td>
                <td>
                    @Shared.Register_SymbolContent
                </td>
                <td></td>

            </tr>
            <tr>
                <td>
                    <p><a href="/register/det-offentlige-kartgrunnlaget/dekning" data-loading-message="@Shared.Register_LoadingMessage" class="show-loading-animation">Det offentlige kartgrunnlaget - dekningskart</a></p>
                </td>
                <td>
                    @Shared.Register_SymbolContent
                </td>
                <td>Kartverket</td>
            </tr>
            @foreach (var item in Model)
            {
                if (item.parentRegisterId == null)
                {
                    <tr>
                        <td>
                            <p><a href="/register/@item.seoname" data-loading-message="@Shared.Register_LoadingMessage" class="show-loading-animation">@item.name</a></p>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>

                        <td title="Eier: @item.owner.name">
                            @if (item.owner == null)
                            {
                                <span>@Shared.Register_NotSet</span>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.owner.name)
                            }
                        </td>

                    </tr>
                }
            }


        </table>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @if (Request.IsAuthenticated)
            {
                if (HtmlHelperExtensions.IsAdmin())
                {
                    @*<a class="btn btn-default pull-right" href="/ny">Nytt register</a>*@
                }
            }
        </div>
    </div>
</div>
