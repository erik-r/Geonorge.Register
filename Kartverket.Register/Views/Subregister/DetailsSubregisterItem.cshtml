@model Kartverket.Register.Models.RegisterItem
﻿@using Kartverket.Register.Helpers

@{
    ViewBag.Title = @Model.name;
    Kartverket.Register.Models.Register mainRegister = HtmlHelperExtensions.mainRegister(Model.register);
    Kartverket.Register.Models.Register parent = Model.register.parentRegister;
    var documentOwner = ViewBag.documentOwner;
}


@section breadcrumb {

    <li><a href="/register/@mainRegister.seoname/">@mainRegister.name</a></li>
    <li class="active pull-right">@Model.name</li>
    <li class="pull-right"><a href="/subregister/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname">@Model.register.name</a></li>
    @while (parent != null && parent != mainRegister)
    {
        <li class="pull-right"><a href="/subregister/@parent.parentRegister.seoname/@parent.parentRegister.owner.seoname/@parent.seoname">@parent.name</a></li>
        parent = parent.parentRegister;
    }
}


<div class="page-header">
    <h2 class="h-md">@Html.DisplayFor(model => model.name)</h2>
    <hr>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-no-padding-xs col-xs-12 col-sm-9 col-md-9 col-lg-9">
        ID: <a href="@Request.Url.AbsoluteUri">@Request.Url.AbsoluteUri</a>

        <p>
            @Html.DisplayFor(model => model.description)
        </p>
        @if (Model.status == null)
        {
            <span>Status: Ikke angitt</span><br />
        }
        else
        {
            <span>Status: @Html.DisplayFor(model => model.status.description) <i class="statusIcon-@Html.DisplayFor(model => model.statusId)"></i></span><br />
        }
        @if (Model.submitter == null)
        {
            <span>Innsender: Ikke angitt</span><br />
        }
        else
        {
            <span>Innsender: @Html.DisplayFor(model => model.submitter.name)</span><br />
        }
        @if (@documentOwner != null)
        {
            <span>Eier: @documentOwner </span><br />
        }
        @*@if (Model.currentVersion == null)
            {
                <span>Versjon: Ikke angitt</span><br />
            }
            else
            {
                <span>Versjon: @Html.DisplayFor(model => model.currentVersion.versionInfo)</span><br />
            }*@


    </div>
    <div class="col-no-padding-xs col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <span class="small">Registrert: @Html.DisplayFor(model => model.dateSubmitted)</span><br />
        <span class="small">Oppdatert: @Html.DisplayFor(model => model.modified)</span>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="page-header">
            <hr>
        </div>


        @if (Model.register.containedItemClass == "Organization")
        {
            @Html.Partial("_detailsOrganization")
        }
        @if (Model.register.containedItemClass == "Document")
        {
            @Html.Partial("_detailsDocuments")
        }
        @if (Model.register.containedItemClass == "Dataset")
        {
            @Html.Partial("_detailsDataset")
        }
        @if (Model.register.containedItemClass == "EPSG")
        {
            @Html.Partial("_detailsEpsg")
        }
        @if (Model.register.containedItemClass == "CodelistValue")
        {
            @Html.Partial("_detailsCodelistValue")
        }

    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <hr />
        <p>
            <a href="/subregister/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname">Tilbake</a>

            @if (Request.IsAuthenticated)
            {

                if (Html.IsGeonorgeAdmin(System.Security.Claims.ClaimsPrincipal.Current.Claims) ||
                    (Html.GetSecurityClaim(System.Security.Claims.ClaimsPrincipal.Current.Claims, "organization").ToLower() == Model.submitter.name.ToLower() && Html.IsGeonorgeEditor(System.Security.Claims.ClaimsPrincipal.Current.Claims)) ||
                    (Html.GetSecurityClaim(System.Security.Claims.ClaimsPrincipal.Current.Claims, "organization") == @documentOwner && Html.IsGeonorgeEditor(System.Security.Claims.ClaimsPrincipal.Current.Claims)))
                {
                    if (Model.register.containedItemClass == "Organization")
                    {
                        <span>| </span><a href="/organisasjoner/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/rediger">Endre</a>
                        <span>| </span><a href="/organisasjoner/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/slett">Slett</a>
                    }
                    if (Model.register.containedItemClass == "Document")
                    {
                        @*<span> | </span><a href="/dokument/versjon/@Model.register.parentRegister.seoname/@Model.register.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/ny">Foreslå ny versjon av @Model.name</a>*@
                    }
                    if (Model.register.containedItemClass == "Dataset")
                    {
                        <span> | </span><a href="/dataset/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/rediger/">Endre</a>
                        <span> | </span><a href="/dataset/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/slett/">Slett</a>
                    }
                    if (Model.register.containedItemClass == "EPSG")
                    {
                        <span> | </span><a href="/epsg/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/rediger/">Endre</a>
                        <span> | </span><a href="/epsg/@Model.register.parentRegister.seoname/@Model.register.parentRegister.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/slett/">Slett</a>
                    }
                    if (Model.register.containedItemClass == "CodelistValue")
                    {
                        <span> | </span><a href="/kodeliste/@Model.register.parentRegister.seoname/@Model.register.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/rediger/">Endre</a>
                        <span> | </span><a href="/kodeliste/@Model.register.parentRegister.seoname/@Model.register.owner.seoname/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/slett/">Slett</a>

                        @*<span> | </span><a href="/kodeliste/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/rediger/">Endre</a>
                            <span> | </span><a href="/kodeliste/@Model.register.seoname/@Model.submitter.seoname/@Model.seoname/slett">Slett</a>*@
                    }
                }
            }

        </p>
    </div>
</div>
