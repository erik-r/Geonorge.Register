@model Kartverket.Register.Models.Dataset

@{
    ViewBag.Title = "Opprett datasett";
}

<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-sm-6 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                Hent informasjon fra metadatakatalogen
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CreateFromMetadata", "ManageDataset", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.Uuid, new { @class = "" })
                        @Html.EditorFor(model => model.Uuid, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
                    </div>
                    <input type="submit" value="Finn metadata" class="btn btn-primary" />
                }
            </div>
        </div>
    </div>
</div>

