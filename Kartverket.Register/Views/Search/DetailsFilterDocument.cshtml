﻿@using Kartverket.Register.Helpers
@model PagedList.IPagedList<Kartverket.Register.Models.Document>
@using Kartverket.Register.Models
@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = Model.ElementAt(0).register.name;  
} 

@section breadcrumb {
    <li><a href="/register/@Model.ElementAt(0).register.seoname">@Html.DisplayFor(model => model.ElementAt(0).register.name)</a></li>
    <li class="active">@Html.DisplayFor(model => model.ElementAt(0).documentowner.name)</li>
}

<script>
    function SortBy(sort) {
        var sort = document.getElementById("sorting");
        var selected = sort.options[sort.selectedIndex].text;
        document.sortering.submit();
        localStorage['SortingType'] = selected;
    }
</script>



<div class="page-header">
    <h2 class="h-md">@Html.DisplayFor(model => Model.ElementAt(0).register.name)</h2>
    <hr>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-no-padding-xs col-xs-12 col-sm-9 col-md-9 col-lg-9">
        
        ID: <a href="/register/@Model.ElementAt(0).register.seoname/@Model.ElementAt(0).documentowner.seoname">http://@Request.Url.Host@Request.Url.LocalPath </a>
        <img src="@Url.Content("~/data/organizations/" + Model.ElementAt(0).documentowner.logoFilename)" class="img-responsive" alt="@Html.DisplayFor(model => Model.ElementAt(0).documentowner.name)" />
    </div>

    <div class="col-no-padding-xs col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <span class="small">Registrert: @Html.DisplayFor(model => model.ElementAt(0).register.dateSubmitted)</span><br />
        <span class="small">Oppdatert: @Html.DisplayFor(model => model.ElementAt(0).register.modified)</span>

    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class=" page-header">
            <hr>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
                <br /><br />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="">
                    <ul class="nav nav-pills text-center">
                        <li><a onclick="listView()" id="button-listView" name="liste" class="active"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Liste</a></li>
                        <li><a onclick="galleryView()" id="button-galleryView" name="galleri" class=""><span class="glyphicon glyphicon-th" aria-hidden="true"></span> Galleri</a></li>
                        <li><a onclick="tableView()" id="button-tableView" name="tabell" class=""><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Tabell</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="pagination pagination-sm pull-right">
                    <form action="/register/@Model.ElementAt(0).register.seoname/@Model.ElementAt(0).documentowner.seoname" name="sortering" method="get">
                        <div class="pull-right" onchange="SortBy()">
                            Sorter: @Html.DropDownList("sorting", "Navn a-å")
                        </div>
                    </form>
                </div>
            </div>


            <br />

            <br /><br />

            <hr />
        </div>

        <div class="document search-results">
            @foreach (Document item in Model)
            {
                <div class="row result-row metadata">
                    <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12" style="height: auto; border: medium none; box-shadow: none;">
                        <div class="col-img col-xs-6 col-sm-2 col-md-2 col-lg-2 pull-left">
                            @{
                                string thumb = "/Content/pdf.jpg";
                                if (item.thumbnail != null)
                                {
                                    thumb = item.thumbnail;
                                }
                            }
                            <a href="@Html.DisplayFor(modelItem => item.documentUrl)"><img src="@thumb" class="img-thumbnail img-responsive pull-left" alt="forside pdf" /></a>
                        </div>
                        <div class="col-no-padding-xs col-title col-sm-5 col-md-5 col-lg-5">
                            <a class="" href="/register/@Html.ToUrl(item.register.name)/@Html.ToUrl(item.documentowner.name)/@Html.ToUrl(item.name)/">
                                <h4 class="role-button" role="button" style="font-size: 18px;">
                                    @item.name
                                </h4>
                            </a>
                            <p class="">
                                    <img src="@Url.Content("~/data/organizations/" +  item.documentowner.logoFilename)" class="img-responsive" alt="@Html.DisplayFor(modelItem => item.documentowner.name)" />                              
                            </p>
                            <p class=" ">
                                @Html.DisplayFor(modelItem => item.description)
                            </p>
                        </div>
                        <div class="col-no-padding-xs col-actions col-xs-6 col-sm-3 col-md-3 col-lg-3">
                            <a href="@Html.DisplayFor(modelItem => item.documentUrl)" type="button" class="btn btn-lg btn-link">
                                <span class="glyphicon glyphicon-download-alt"> </span>last ned
                            </a><br />
                        </div>
                        <div class="col-no-padding-xs col-xs-6 col-sm-2 col-md-2 col-lg-2 col-actions pull-right">

                            @if (item.status == null)
                            {
                                <span>Status: Ikke angitt</span><br />
                            }
                            else
                            {
                                <span>Status: @item.status.description <i class="statusIcon-@item.statusId"></i></span><br />
                            }
                            <br />
                            @if (item.documentUrl == null)
                            {
                                <span>Referanse: Ikke angitt</span><br />;
                            }
                            else if (item.documentUrl.Contains("/data/documents/"))
                            {
                                <span>Referanse: Intern</span><br />
                            }
                            else
                            {
                                <span>Referanse: Ekstern</span><br />
                            }
                        </div>

                    </div>

                </div>

                <hr class="" />
            }
        </div>



    </div>


</div>


    <hr />
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
            Registere viser @Model.FirstItemOnPage - @Model.LastItemOnPage av @Model.TotalItemCount
        </div>
        <div class="col-img col-xs-12 col-sm-6 col-md-6 col-lg-6">
            @Html.PagedListPager(Model, page => Url.Action("Details", new { page, sorting = ViewBag.SortOrder }))
        </div>
        <p>
            <a href="/register/@Html.ToUrl(Model.ElementAt(0).register.name)/">Tilbake</a>
        </p>
    </div>





