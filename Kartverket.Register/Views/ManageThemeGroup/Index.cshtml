@model IEnumerable<Kartverket.DOK.Models.ThemeGroup>

@{
    ViewBag.Title = "Alle temagrupper";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Opprett ny temagruppe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Vis", "Details", new { id=item.Id }) |
            @Html.ActionLink("Slett", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
